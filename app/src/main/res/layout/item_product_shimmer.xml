<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="0dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/card_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <!-- Product Image Placeholder -->
        <View
            android:id="@+id/imgProductShimmer"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@color/image_background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Favorite Star Placeholder -->
        <View
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/shimmer_background"
            app:layout_constraintTop_toTopOf="@id/imgProductShimmer"
            app:layout_constraintEnd_toEndOf="@id/imgProductShimmer"
            android:layout_margin="8dp" />

        <!-- Price Placeholder -->
        <View
            android:id="@+id/tvPriceShimmer"
            android:layout_width="60dp"
            android:layout_height="16dp"
            android:background="@drawable/shimmer_background"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/imgProductShimmer"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Product Title Placeholder -->
        <View
            android:id="@+id/tvTitleShimmer"
            android:layout_width="0dp"
            android:layout_height="16dp"
            android:background="@drawable/shimmer_background"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tvPriceShimmer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Add to Cart Button Placeholder -->
        <View
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@drawable/shimmer_background"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvTitleShimmer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView> 