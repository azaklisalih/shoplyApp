<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Custom Text Styles using Inter Font Family -->
    
    <!-- Bold Text Styles -->
    <style name="TextStyle_Bold_Large" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">32sp</item>
    </style>
    
    <style name="TextStyle_Bold_Medium" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">28sp</item>
    </style>
    
    <style name="TextStyle_Bold_Small" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextStyle_Bold_Very_Small" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>
    
    <!-- Medium Text Styles -->
    <style name="TextStyle_Medium_Large" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">22sp</item>
    </style>
    
    <style name="TextStyle_Medium_Medium" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="TextStyle_Medium_Small" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <!-- Regular Text Styles -->
    <style name="TextStyle_Regular_Large" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="TextStyle_Regular_Medium" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="TextStyle_Regular_Small" parent="TextAppearance.Material3.BodySmall">
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
    </style>
    
    <!-- Product Title Style -->
    <style name="TextStyle_ProductTitle">
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/on_surface</item>
    </style>
    
    <!-- Toolbar Title Style -->
    <style name="TextStyle_ToolbarTitle">
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/on_surface</item>
    </style>
    
    <!-- Button Text Style -->
    <style name="TextStyle_Button">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>
